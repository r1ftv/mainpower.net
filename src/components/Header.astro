import { Image } from "astro:assets";

const navItems = [
    { name: "Features", href: "#" },
    { name: "How to get it?", href: "#" },
    { name: "Docs", href: "#" },
    { name: "Patreon", href: "#" },
    { name: "Hosting", href: "#" },
