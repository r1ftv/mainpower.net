    class="container mx-auto px-4 py-6 max-w-7xl flex justify-between items-center rounded-lg p-6"
>
    <a href="/">
        <Image
            src="/images/dracobit-logo.webp"
            format="webp"
            width={42}
            height={42}
            alt="DracoBit Logo"
        />
    </a>

    <nav class="hidden md:flex space-x-2 text-gray-600">
        {navItems.map(item => (
            <a
                href={item.href}
                class="hover:bg-dracobit-green hover:text-white px-6 py-2 rounded-full transition duration-300"
            >
                {item.name}
            </a>
        ))}
